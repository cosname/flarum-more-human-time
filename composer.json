{
    "name": "cosname/flarum-more-human-time",
    "description": "Flarum plugin to display date and time (more) humanly.",
    "type": "flarum-extension",
    "keywords": [
        "human",
        "time",
        "date"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yixuan Qiu",
            "email": "yixuan.qiu@cos.name"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.8"
    },
    "autoload": {
        "psr-4": {
            "Cosname\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "More Human Time",
            "icon": {
                "name": "fas fa-calendar-alt",
                "backgroundColor": "#489fdf",
                "color": "#fff"
            }
        }
    }
}
